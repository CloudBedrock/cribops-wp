# WordPress Site Configuration
WORDPRESS_SITEURL=http://localhost:8090
WORDPRESS_HOME=http://localhost:8090

# For custom domain (update your /etc/hosts file accordingly)
# WORDPRESS_SITEURL=http://mysite.local:8090
# WORDPRESS_HOME=http://mysite.local:8090

# WordPress Admin Configuration
# WP_ADMIN_USER=admin
# WP_ADMIN_PASSWORD=password123
# WP_ADMIN_EMAIL=admin@example.com
# WP_SITE_TITLE="My WordPress Site"

# Theme Configuration (theme folder name in themes/ directory)
# WP_ACTIVE_THEME=etch-theme

# Additional WordPress Configuration
# Add any extra WordPress constants here (multiline supported)
# Example:
# WP_CONFIG_EXTRA="
# define('WP_MEMORY_LIMIT', '256M');
# define('WP_MAX_MEMORY_LIMIT', '512M');
# define('WSF_LICENSE_KEY', 'your-license-key');
# define('WSF_ACTION_PDF_LICENSE_KEY', 'your-pdf-license-key');
# "
WP_CONFIG_EXTRA=""

# Upload and Memory Limits
MAX_UPLOAD_SIZE=512M
PHP_MEMORY_LIMIT=512M
PHP_MAX_EXECUTION_TIME=600

# Debug Configuration (optional)
WP_DEBUG=false
WP_DEBUG_LOG=false
WP_DEBUG_DISPLAY=false

# Development Tools Configuration
# Enable MailPit email testing (run with: docker compose --profile mailpit up -d)
# MAILPIT_ENABLED=true

# Enable ngrok tunneling (run with: docker compose --profile ngrok up -d)
# NGROK_AUTHTOKEN=your_ngrok_auth_token_here
# NGROK_REGION=us